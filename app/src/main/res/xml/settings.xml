<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/theme_settings">

        <xyz.klinker.messenger.view.AutoSummaryListPreference
            android:key="@string/pref_base_theme"
            android:title="@string/base_theme"
            android:entries="@array/base_theme"
            android:entryValues="@array/base_theme_values"
            android:defaultValue="day_night" />

        <xyz.klinker.messenger.view.AutoSummaryListPreference
            android:key="@string/pref_global_color_theme"
            android:title="@string/global_theme_color"
            android:entries="@array/global_color"
            android:entryValues="@array/global_color_values"
            android:defaultValue="default" />

        <xyz.klinker.messenger.view.AutoSummaryListPreference
            android:key="@string/pref_font_size"
            android:title="@string/font_size"
            android:entries="@array/font_size"
            android:entryValues="@array/font_size_values"
            android:defaultValue="normal" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/notification_settings">

        <xyz.klinker.messenger.view.NotificationAlertsPreference
            android:key="@string/pref_alert_types"
            android:title="@string/alert_types"
            android:summary="@string/alert_types_summary" />

        <SwitchPreference
            android:key="@string/pref_delivery_reports"
            android:title="@string/delivery_reports"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="@string/pref_sound_effects"
            android:title="@string/sound_effects"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/advanced">

        <SwitchPreference
            android:key="@string/pref_convert_to_mms"
            android:title="@string/send_as_mms"
            android:summary="@string/send_as_mms_summary"
            android:defaultValue="true" />

        <Preference
            android:key="@string/pref_signature"
            android:title="@string/signature"
            android:summary="@string/signature_summary" />

    </PreferenceCategory>

</PreferenceScreen>